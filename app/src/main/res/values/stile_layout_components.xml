<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wikipedia_textInputLayout"  parent="width_and_height_100">
        <item name="backgroundTint">@color/theme_mars_chocolate</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">custom</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>

    </style>

    <style name="width_and_height_100">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="width_and_height_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="width_100">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="width_and_height_100_padding_10" parent="width_and_height_100">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="imageView" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="srcCompat">@drawable/ic_no_photo_vector</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>

    <style name="bottomAppBar" parent="width_100">
        <item name="android:layout_gravity">bottom</item>
        <item name="hideOnScroll">true</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="textView_center" parent="width_and_height_content">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
</resources>